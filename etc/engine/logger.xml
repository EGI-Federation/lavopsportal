             <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>
        <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
            <smtpHost>smtp.domain.org</smtpHost>
            <to>change.me@domain.org</to>
            <from>change.me@domain.org</from>
            <subject>[${APPLICATION_NAME}]: %m</subject>
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <expression>return level >= WARN;</expression>
                <OnMatch>ACCEPT</OnMatch>
            </evaluator>
            <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
        </appender>
        <root level="WARN">
            <appender-ref ref="EMAIL"/>
        </root>
    -->

    <logger name="fr.in2p3.lavoisier" level="INFO"/>
    <logger name="fr.in2p3.lavoisier.engine.jmx" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="XML"/>
    </root>
</configuration>
