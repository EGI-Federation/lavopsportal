<configuration>
    <property name="APPLICATION_NAME" value="lavoisier"/>

    <!-- WARNING: removing this section may lead to performance issues with external libraries that use JUL -->
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator"/>

    <if condition='property("HOSTNAME").startsWith("ccosvms")'>
        <then>
            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <customFields>{"application":"${APPLICATION_NAME}"}</customFields>
                </encoder>
            </appender>
        </then>
        <else>
            <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
                <encoder>
                    <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                </encoder>
            </appender>
        </else>
    </if>

    <appender name="XML" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>lavoisier-logs.xml</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>lavoisier-logs.%i.xml</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>3</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>5MB</maxFileSize>
        </triggeringPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.log4j.XMLLayout">
                <locationInfo>false</locationInfo>
            </layout>
        </encoder>
    </appender>
