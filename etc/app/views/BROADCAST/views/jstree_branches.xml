<config xmlns="http://software.in2p3.fr/lavoisier/config.xsd" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:sf2="http://symfony.com/schema/dic/services"  version="11">


    <view name="gmJSTreeView" xmlns:sf2="http://symfony.com/schema/dic/services">
        <info>
            <category>BROADCAST jstree branches</category>
            <description>Generic Mailing List</description>
        </info>
        <connector type="XSLTConnector">
            <parameter name="stylesheet" eval="document(concat(property('xsl.directory'),'/JSTreeView.xsl'))"/>
            <parameter name="documents">
                <entry key="treeConf" eval="view('JSTreeConf_Cached')//sf2:argument[@key='gm']"/>
                <entry key="rawData" eval="view('gmRecipientsView')"/>
            </parameter>
        </connector>
        <cache type="FileCache">
            <trigger type="ViewNotifiedTrigger"/>
            <trigger type="DependencyRefreshedTrigger">
                <parameter name="views">
                    <entry>JSTreeConf_Cached</entry>
                    <entry>gmRecipientsView</entry>
                </parameter>
            </trigger>
        </cache>

    </view>

