    <view name="OPSCORE_listReleases" xmlns:html="http://www.w3.org/1999/xhtml">
        <info>
            <category>Release Note</category>
            <description>get list of release note on forge</description>
        </info>

        <argument name="vapor">false</argument>
        <connector type="HTTPConnector">
            <parameter name="url">https://forge.in2p3.fr/rb/releases/opsportaluser</parameter>
        </connector>
        <serializer type="HTMLSerializer"/>
        <processors>
        
                <processor match="//*" type="ChangeNamespaceProcessor"></processor>
          
            <select match="/html/body/div/div/div/div[@id='main']/div[@id='content']/div[@class='model release']"/>

            <replace match="/e:entries/div/h3/a[text()]" nodes="entry('number', text())"/>
            <replace match="/e:entries/div/p[b/text() = 'Release start date:']/text()" nodes="entry('start_date', .)"/>
            <replace match="/e:entries/div/p[b/text() = 'Release end date:']/text()" nodes="entry('end_date', .)"/>
            <insert match="/e:entries/div[@id]" nodes="entry('id', substring-after(@id, 'release_'))"/>
            <remove match="/e:entries/div/@class"/>
            <remove match="/e:entries/div/h3" depth="1"/>
            <remove match="/e:entries/div/p" depth="1"/>
            <remove match="/e:entries/div/b" depth="1"/>
            <remove match="/e:entries/div/br" depth="1"/>
            <remove match="/e:entries/div/text()" depth="1"/>
            <remove match="/e:entries/div/div" depth="1"/>
            <rename match="/e:entries/div" name="e:entries"/>

            <remove match="/e:entries/e:entries[not(e:entry[@key='end_date'])]"></remove>
            <remove match="/e:entries/e:entries[contains(e:entry[@key='number'],'Next') or contains(e:entry[@key='number'],'next')]"></remove>


                <element in="e:entries" if="$vapor='true'">
                    <element in="e:entries" if="contains(e:entry[@key='number'],'vapor')"></element>
                    <element-ignore></element-ignore>
                </element>

                <element in="e:entries" if="$vapor='false'">
                    <element-ignore in="e:entries" if="contains(e:entry[@key='number'],'vapor')"></element-ignore>
                </element>


       </processors>




    </view>

    <view name="OPSCORE_renderReleaseNote">

        <info>
            <category>Release Note</category>
            <description>get a given release on forge</description>
        </info>
        <argument name="base_url" eval="property('OPSCORE.forge.baseurl')"></argument>
        <argument name="release_id"/>
        <connector type="HTTPConnector">
            <parameter name="url" eval="concat($base_url,$release_id)"/>
            <parameter name="connect-timeout">600</parameter>
            <parameter name="read-timeout">600</parameter>
            <parameter name="force-redirect">true</parameter>
        </connector>

        <serializer type="CSVSerializer"></serializer>
    </view>


    <view name="OPSCORE_ACCPORTAL_VOS">
        <connector type="XMLConnector">
            <parameter name="content" eval="view('VoEntries')"></parameter>
        </connector>

        <processors>

            <element in="e:entries">
                <set variable="listSiteEmail">view('vmRecipientsView')</set>
                <element in="e:entries" if="e:entry[@key='status']='Production'">
                    <element in="e:entry" if="@key='name'"></element>
                    <element-ignore></element-ignore>
                    <element-create>view('OPSCORE_ACCPORTAL_VO',entry('vo',../e:entry[@key='name']/text()))/e:entries/*</element-create>
                    <element-create>entry('email',choose($listSiteEmail/Recipients/Recipient[label/text()=current()/../e:entry[@key='name']/text()]/email/text(),$listSiteEmail/Recipients/Recipient[label/text()=current()/../e:entry[@key='name']/text()]/email/text(),'NA'))</element-create>
                </element>
                <element-ignore></element-ignore>
            </element>
        </processors>

        <cache type="FileCache">
            <trigger type="DeltaTimeTrigger">
                <parameter name="minutes">156</parameter>
            </trigger>
            <trigger type="ViewNotifiedTrigger"/>
        </cache>

        <renderers>
            <renderer type="DefaultRenderer">
                <parameter name="contentType">text/xml</parameter>
            </renderer>
        </renderers>
    </view>

    <view name="OPSCORE_ACCPORTAL_SITES">
        <connector type="XMLConnector">
            <parameter name="content" eval="view('OPSCORE_SITE')"></parameter>
        </connector>

        <processors>

            <element in="e:entries">
                <set variable="listSiteEmail">view('saRecipientsView')</set>
                <element in="e:entries" if="e:entry[@key='PRODUCTION_INFRASTRUCTURE']='Production' and e:entry[@key='CERTIFICATION_STATUS']='Certified' ">
                    <element-ignore></element-ignore>
                    <element-create>view('OPSCORE_ACCPORTAL_SITE',entry('site',../e:entry[@key='NAME']/text()))/e:entries/*</element-create>
                    <element-create>entry('email',choose($listSiteEmail/Recipients/Recipient[label/text()=current()/../e:entry[@key='NAME']/text()]/email/text(),$listSiteEmail/Recipients/Recipient[label/text()=current()/../e:entry[@key='NAME']/text()]/email/text(),'NA'))</element-create>
                </element>
                <element-ignore></element-ignore>
            </element>
        </processors>

        <cache type="FileCache">
            <trigger type="DeltaTimeTrigger">
                <parameter name="minutes">126</parameter>
            </trigger>
            <trigger type="ViewNotifiedTrigger"/>
        </cache>

        <renderers>
            <renderer type="DefaultRenderer">
                <parameter name="contentType">text/xml</parameter>
            </renderer>
        </renderers>
    </view>



